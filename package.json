{
  "name": "flagship",
  "version": "0.1.0",
  "private": true,
  "description": "Production-ready feature flag management platform",
  "author": "Your Name",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "npm run dev --workspace=dashboard",
    "build": "npm run build --workspace=dashboard",
    "start": "npm run start --workspace=dashboard",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5"
  },
  "packageManager": "pnpm@8.15.1"
}
